{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "Preserve",
    "moduleDetection": "force",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["**/*.js", "**/*.jsx", "schemaTypes/restaurant.js", "schemaTypes/index.js", "schemaTypes/featured.js", "schemaTypes/dish.js", "sanity.config.js", "sanity.cli.js"],
  "exclude": ["node_modules"]
}
